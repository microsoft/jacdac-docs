                        "workflows": "write"
                    }
                },
                "microsoft/jacdac": {
                    "permissions": {
                        "contents": "write",
                        "pull_requests": "write",
                        "workflows": "write"
                    }
                },
                "microsoft/jacdac-c": {
                    "permissions": {
                        "contents": "write",
                        "pull_requests": "write",
                        "workflows": "write"
                    }
                }
            }
        }
    }
}